{
  "plugins": [
    [
      "remark-frontmatter",
      [
        "yaml"
      ]
    ],
    [
      "remark-frontmatter-validator",
      [
        2,
        {
          "trailName": {
            "type": "string",
            "required": true
          },
          "date": {
            "type": "date",
            "required": true
          },
          "activity": {
            "type": "array",
            "required": true,
            "oneOf": [
              "running",
              "swimming",
              "walking",
              "cycling",
              "hiking"
            ]
          },
          "link": {
            "type": "string",
            "required": false
          },
          "location": {
            "type": "string",
            "required": true
          },
          "free": {
            "type": "boolean"
          },
          "routes": {
            "type": "string",
            "required": false
          },
          "otherLinks":{
            "type": "string",
            "required": false
          }
        }
      ]
    ]
  ]
}
